<?xml version="1.0"?>
<robot name="racecar">

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.5 0.2 0.1"/>
      </geometry>
      <material/>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.2 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0 0"/>
      <mass value="10"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>

  <!-- Rear Wheel Links -->
  <link name="rear_wheel_left">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.3"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="0.3"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0 0"/>
      <mass value="1"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <link name="rear_wheel_right">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.3"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="0.3"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0 0"/>
      <mass value="1"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Joints for Rear Wheels -->
  <joint name="rear_wheel_left_joint" type="revolute">
    <parent link="base_link"/>
    <child link="rear_wheel_left"/>
    <origin xyz="0 0.2 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="rear_wheel_right_joint" type="revolute">
    <parent link="base_link"/>
    <child link="rear_wheel_right"/>
    <origin xyz="0 -0.2 0"/>
    <axis xyz="0 1 0"/>
  </joint>

</robot>